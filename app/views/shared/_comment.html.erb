<div class="comment" id="<%= comment.id %>">
  <div class="avatar">
    <%= image_tag comment.user.avatar %>
  </div>
  <div class="content">
    <%= comment.comment %>
    <footer>
      Posted by <%= comment.user.name %>
      on <%= comment.created_at.in_time_zone("Eastern Time (US & Canada)").strftime("%B %e, %Y") %>
    </footer>
    <% if current_user && current_user.admin? %>
      <ul class="actions">
        <li><%= link_to "Spam", "#" if current_user.admin? %></li>
        <li><%= link_to "Edit", "#" %></li>
        <% if comment.show %>
          <li><%= link_to "Hide", admin_comment_path(comment), method: :delete %></li>
        <% else %>
          <li><%= link_to "Show", admin_comment_path(comment), method: :delete %></li>
        <% end %>
      </ul>
    <% end %>
  </div>
</div>
