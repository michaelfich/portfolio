<%= link_to [:admin, message] do %>
  <div class="from">
    <% unless message.read? %>
      <i class="fa fa-envelope"></i>
    <% else %>
      <i class="fa fa-envelope-o"></i>
    <% end %>

    <%= message.name %> (<%= message.email %>)
  </div>
  <div class="date">
    <%= message.created_at.in_time_zone("Eastern Time (US & Canada)").strftime("%d/%m/%Y %l:%M %p") %>
  </div>
<% end %>
