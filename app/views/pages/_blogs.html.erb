<section class="recent blogs">
  <h3>Recent Blogs</h3>

  <div class="blog-list">
    <% @recent_blogs.first(2).each do |blog| %>
      <div class="blog">
        <aside>
          <%= blog.published_at.in_time_zone("Eastern Time (US & Canada)").strftime("%B %e, %Y") %>
        </aside>

        <header>
          <%= link_to blog.title, blog %>
        </header>

        <article>
          <%= truncate(blog.body, length: 400) do %>
            <%= link_to "Continue reading", blog  %>
          <% end %>
        </article>
      </div>
    <% end %>
  </div>
</section>