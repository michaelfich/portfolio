<%= link_to project, class: 'project' do %>
  <section>
    <div class="preview">
      <%= image_tag(project.image_preview) %>
    </div>

    <header class="title">
      <%= project.title %>
    </header>

    <article class="description">
      <%= project.description %>
    </article>

    <% unless project.completed? %>
      <aside class="in-development">
        <div class="ribbon">
          In Development
        </div>
      </aside>
    <% end %>
  </section>
<% end %>
