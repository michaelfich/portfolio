<section class="projects all">
  <h3>Projects</h3>

  <div class="project-list">
    <% @projects.each do |project| %>
      <div class="project">
        <aside class="thumbnail">
          <%= image_tag project.image_preview %>
          <% unless project.completed? %>
            <aside class="in-development">
              <div class="ribbon">
                In Development
              </div>
            </aside>
          <% end %>
        </aside>

        <div class="content">
          <header class="title">
            <%= project.title %>
          </header>

          <article class="description">
            <%= project.description %>
          </article>
        </div>
      </div>
    <% end %>
  </div>
</section>